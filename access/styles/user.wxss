.container.user {
  padding-bottom: 20px;
}

.container.user .head-portrait {
  width: 90vw;
  height: 22vh;
  margin: 0px auto;
}

.container.user .rows {
  overflow: hidden;
  background-color: #FFF;
  margin: -1px 0;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  margin-bottom: 10px;
}

.container.user .rows .row .line {
  border-top: 1px solid #efefef;
}

.container.user .column {
  font-size: 14.5px;
  padding: 14px 0;
  width: 100vw;
  height: 50px;
  box-sizing: border-box;
}

.container.user .after {
  right: 20px;
  font-size: 14px;
  line-height: 15px;
  position: absolute;
}

.container.user .after image {
  width: 15px;
  height: 15px;
  margin-left: 3px;
}

.container.user button {
  padding: 0;
  border: 0px;
  overflow: auto;
  border-radius: 0;
  background-color: #FFF;
}

.container.user button.button-hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.container.user button::after {
  border-radius: 0;
  border: 0;
}

.container.user text {
  color: #000;
  margin-left: 20px;
}

.container.user input,
.container.user picker {
  width: 45vw;
  color: #9a9a9a;
  text-align: right;
  margin-right: 20px;
}

.container.user .userinfo {
  padding-top: 20px;
  padding-bottom: 40px;
  flex-direction: column;
}

.container.user .userinfo .avatar {
  width: 86px;
  height: 86px;
  margin: 20px;
  display: block;
  overflow: hidden;
  border-radius: 50%;
}

.container.user .userinfo .nickname {
  color: #1b1b1b;
}

.container.user .logout {
  text-align: center;
  font-size: 14px;
  color: red;
  margin: 20px;
  padding: 12px;
  border-radius: 20px;
  border: 1px solid #efefef;
  background-color: transparent;
}
