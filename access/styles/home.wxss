/* pages/home/home.wxss */

.container.home {
  width: 100%;
  height: 100vh;
  background: #f2f2f2;
}

.container.home .top {
  height: 35vh;
  width: 100%;
  background: #f2f2f2;
}

.container.home .top-bg {
  width: 100%;
  height: 75%;
  background: #5e3763;
  position: relative;
}

.container.home .title {
  width: 94vw;
  height: 33vh;
  border-radius: 5px;
  box-shadow: 0 0 10px #585555;
  margin: 0px auto;
  overflow: hidden;
  position: absolute;
  top: 2vh;
  left: 0;
  right: 0;
}

.container.home .title .logo {
  width: 100%;
  height: 100%;
}

.container.home .content {
  width: 100%;
  height: 48vh;
  background: #f2f2f2;
  margin-top: 3vh;
}

.container.home .content .manager {
  text-align: center;
  margin-bottom: 3vh;
}

.container.home .manager-con {
  width: 94vw;
  height: 16vh;
  border-radius: 5px;
  margin: 0 auto;
  margin-top: 2vh;
  background: #fff;
  color: #585555;
  box-shadow: 0 0 5px #706e6e;
  overflow: hidden;
}

.container.home .column {
  font-size: 16px;
  line-height: auto;
  padding: 0 5px;
  height: 50%;
  box-sizing: border-box;
}

.container.home .lost-img {
  width: 8vw;
  height: 8vw;
  margin: 0 10px 0 5px;
  border-radius: 5px;
  box-shadow: 0 0 5px #d6aedb inset;
}

.next {
  width: 20px;
  height: 20px;
}

.separate {
  height: 0px;
  width: 90vw;
  margin: 0 auto;
  margin-top:-1px;
  border-bottom: solid 1px rgb(184, 182, 182);
}

.container.home .bottom {
  width: 100%;
  height: 9vh;
  margin-top: 1vh;
  margin-bottom: 4vh;
  font-size: 16px;
}

.container.home .bottom navigator {
  color: #5e3763;
  text-decoration: underline;
  text-align: center;
}

.bottom-con {
  margin: 0 auto;
}

.bottom-con text {
  margin: 0 5vw;
}
