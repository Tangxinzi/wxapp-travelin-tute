page {
  background-color: #FFF;
}

.container.swiper .swiper-container {
  padding: 3vw;
  height: 190px;
  background-color: #743481;
}

.container.swiper .swiper-item-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  font-size: 14px;
  font-weight: 500;
  width: 100%;
  height: 6vh;
  background-color: #743481;
  color: rgba(255, 255, 255, .8);
}

.container.swiper .swiper-item-title .item-title::after {
  content: '';
  display: block;
  border-bottom: 2px solid #743481;
  border-radius: 10px;
  position: relative;
  width: 100%;
  bottom: -3px;
  transition: .3s;
}

.container.swiper .swiper-item-title .item-title.active {
  color: #FFFFFF;
}

.container.swiper .swiper-item-title .item-title.active::after {
  border-bottom: 2px solid #FFF;
}

.container.swiper .swiper-view {
  background-color: #FFFFFF;
  min-height: 50vh;
}

