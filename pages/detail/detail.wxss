page {
  background-color: #fff;
}

.container.detail,
.container.diglossia {
  display: none;
}

.container.detail.active,
.container.diglossia.active {
  background-color: #eee;
  display: block;
}

.detail .theme.block,
.diglossia .theme.block {
  width: 100%;
  margin: 0;
  padding: 0;
  background-color: #FFF;
}

.detail .content.block {
  margin-top: 8px;
  background-color: #FFF;
}

.diglossia .content.block {
  margin-top: 0px;
  background-color: #FFF;
}

.theme .image {
  position: relative;
  font-size: 0;
}

.theme .image image {
  height: 40.2vh;
}

.theme .image .box {
  padding-bottom: 10px;
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  box-sizing: content-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-shadow: 0px 0px 15px rgba(77, 77, 77, 0.65);
  background-image: linear-gradient(to top, rgba(0, 0, 0, 0.77), rgba(0, 0, 0, 0.00));
}

.container.video .image video,
.container.video .image image {
  width: 100%;
  height: 230px;
  /* position: fixed; */
  background-color: #000;
}

.container.video scroll-view {
  /* padding-top: 235px; */
}

.container.video .box {
  padding: 10px;
  width: 100%;
  position: relative;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-image: none;
}

.container.video .label {
  position: absolute;
  bottom: 8px;
  right: 8px;
  font-size: 22rpx;
  padding: 4rpx 10rpx;
  background: rgba(0, 0, 0, 0.85);
  color: rgba(255, 255, 255, 0.9);
  border-radius: 3px;
}

.container.video .box .header {
  font-weight: 700;
  font-size: 22px;
  margin-bottom: 10px;
  color: #000;
  text-shadow: none;
  letter-spacing: -.13px;
}

.container.video .sub_header {
  font-weight: 400;
  color: #2f2f2f;
  font-size: 15px;
  text-shadow: none;
}

.container.video .button {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding: 0 10px 10px 10px;
  border-bottom: 1px solid #e1e1e1;
}

.container.video .button .icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.container.video .button image {
  width: 30px;
  height: 30px;
}

.container.video .button text {
  font-size: 11px;
  margin-top: 2px;
  color: #9c9c9c;
}

.diglossia .theme .image .box {
  padding-top: 10px;
  padding-bottom: 10px;
}

.theme .image .header {
  color: #FFF;
  font-weight: 400;
  font-size: 18px;
  margin-left: 10px;
  letter-spacing: -.13px;
}

.theme .image .sub_header {
  color: #E0E0E0;
  font-weight: 400;
  font-size: 12.5px;
  margin-left: 10px;
  margin-right: 10px;
}

.theme .image .box .play {
  position: relative;
  right: 10px;
  bottom: 50%;
  padding: 17px 17px;
  box-sizing: border-box;
}

.theme .image .box .play image {
  width: 34px;
  height: 34px;
  position: absolute;
  left: 0;
  top: 0;
}

.theme .content .title, .main .content .title {
  padding: 8px 10px 0;
  color: #333;
  font-size: 16.6px;
  height: 22px;
  font-weight: 600;
  box-sizing: content-box;
}

.theme .content .description {
  padding: 0px 10px 18px;
  box-sizing: border-box;
}

.theme .description .item {
  font-size: 13.8px;
  line-height: 20px;
  color: #555;
  padding-top: 10px;
}

.theme .description .item + .item {
}

.main .lists .list {
  margin: 0 15px 0px 45px;
  padding-top: 13px;
  padding-bottom: 13px;
  color: #444;
  font-size: 14px;
  box-sizing: border-box;
  position: relative;
}

.diglossia .lists .list {
  margin: 0 15px 0px 15px;
}

.main .lists .list .ch {
  color: #B8B8B8;
}

.main .content .lists .list + .list {
  border-top: 1px solid #EEE;
}

.main .lists .list .index {
  position: absolute;
  width: 30px;
  height: 30px;
  left: -30px;
}

.main .block.content:last-child {
  margin-bottom: 0;
}
